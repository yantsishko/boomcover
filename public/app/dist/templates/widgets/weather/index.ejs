            <div class="col-md-12 box-body">
                <div class="col-md-6 form-group">
                    <label>Город</label>
                    <input  class="form-control" type="text" name="weather_city" placeholder="Введите город" value="<%= city %>">
                </div>

                <div class="col-md-6">
                    <div class="col-md-6 checkbox visible-checkbox">
                        <h5>Скрыть ветер</h5>
                        <label>
                            <input name="weather_wind_show" <% if (!showWind) {%> checked <%}%> type="checkbox"> Скрыть
                        </label>
                    </div>
                    <div class="col-md-6 checkbox visible-checkbox">
                        <h5>Скрыть тип</h5>
                        <label>
                            <input name="weather_type_show" <% if (!showType) {%> checked <%}%> type="checkbox"> Скрыть
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-md-12 box-body">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Текст после температуры</label>
                        <input class="form-control" type="text" name="weather_text_after" value="<%= textAfter %>" placeholder="°C">
                    </div>
                    <div class="form-group">
                        <label>Показывать погоду на:</label>
                        <select class="form-control" name="weather_time">
                            <option <% if (weatherTime === 'today') {%> selected <%}%> value="today">Сегодня</option>
                            <option <% if (weatherTime === 'tomorrow') {%> selected <%}%> value="tomorrow">Завтра</option>
                            <option <% if (weatherTime === 'afterTomorrow') {%> selected <%}%> value="afterTomorrow">Послезавтра</option>
                        </select>
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label>Шаблон иконки погоды</label>
                        <select class="form-control" name="weather_template">
                            <!--<option value="bubble">Bubble</option>-->
                            <option <% if (weatherTemplate === 'plain') {%> selected <%}%> value="plain">Plain</option>
                            <option <% if (weatherTemplate === 'silq') {%> selected <%}%> value="silq">Silq</option>
                            <option <% if (weatherTemplate === 'sketchy') {%> selected <%}%> value="sketchy">Sketchy</option>
                            <option <% if (weatherTemplate === 'vclouds') {%> selected <%}%> value="vclouds">Vclouds</option>
                            <option <% if (weatherTemplate === 'touch') {%> selected <%}%> value="touch" selected>Touch</option>
                            <!--<option value="weezly">Weezly</option>-->
                        </select>
                    </div>
                    <div class="col-md-12 no-padding">
                        <div class="form-group templatesIcons">
                            <ul class="iconTouch" id="weather_icons">

                            </ul>
                        </div>
                    </div>
                </div>

            </div>
